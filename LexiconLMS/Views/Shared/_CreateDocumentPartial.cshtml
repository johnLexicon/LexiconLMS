@model LexiconLMS.ViewModels.CreateDocumentViewModel

@{

}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EnitityId" />
            <div class="form-group">
                <label asp-for="file" class="control-label"></label>
                <input asp-for="file" type="file"/>
                <span asp-validation-for="file" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Upload" class="btn btn-green" />
               <a asp-action="Index" class="btn btn-purple">Back to List</a>
            </div>
        </form>
    </div>
</div>

